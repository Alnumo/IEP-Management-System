# Arkan Therapy Management System - Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Basic app configuration
VITE_APP_NAME="Arkan Growth Center - Therapy Management System"
VITE_APP_VERSION="1.2.0"
VITE_ENVIRONMENT="development"
VITE_APP_DOMAIN="localhost:5174"

# =============================================================================
# SUPABASE DATABASE CONFIGURATION (REQUIRED)
# =============================================================================

# Supabase Project Settings
# Get these from your Supabase project dashboard: https://app.supabase.com
VITE_SUPABASE_URL="https://your-project-ref.supabase.co"
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Database connection (for server-side scripts)
# Only needed if using server-side database operations
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.your-project-ref.supabase.co:5432/postgres"

# =============================================================================
# WHATSAPP BUSINESS API (OPTIONAL)
# =============================================================================

# WhatsApp Business API Configuration
# Required for parent communication features
# Get these from Meta Business Manager: https://business.facebook.com/
VITE_WHATSAPP_API_ENDPOINT="https://graph.facebook.com/v17.0"
VITE_WHATSAPP_BUSINESS_ID="your-whatsapp-business-id"
VITE_WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
VITE_WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"

# WhatsApp Webhook Configuration (for receiving messages)
VITE_WHATSAPP_WEBHOOK_VERIFY_TOKEN="your-webhook-verify-token"

# =============================================================================
# SAUDI INSURANCE PROVIDERS API ENDPOINTS (OPTIONAL)
# =============================================================================

# Bupa Arabia Insurance API
# Contact Bupa Arabia for API access and credentials
VITE_BUPA_API_ENDPOINT="https://api.bupaarabia.com/v1"
VITE_BUPA_CLIENT_ID="your-bupa-client-id"
VITE_BUPA_CLIENT_SECRET="your-bupa-client-secret"

# Tawuniya Insurance API
# Contact Tawuniya for API access and credentials
VITE_TAWUNIYA_API_ENDPOINT="https://api.tawuniya.com.sa/v1"
VITE_TAWUNIYA_CLIENT_ID="your-tawuniya-client-id"
VITE_TAWUNIYA_CLIENT_SECRET="your-tawuniya-client-secret"

# MedGulf Insurance API
# Contact MedGulf for API access and credentials
VITE_MEDGULF_API_ENDPOINT="https://api.medgulf.com/v1"
VITE_MEDGULF_CLIENT_ID="your-medgulf-client-id"
VITE_MEDGULF_CLIENT_SECRET="your-medgulf-client-secret"

# Al Rajhi Takaful Insurance API
# Contact Al Rajhi Takaful for API access and credentials
VITE_ALRAJHI_API_ENDPOINT="https://api.alrajhitakaful.com/v1"
VITE_ALRAJHI_CLIENT_ID="your-alrajhi-client-id"
VITE_ALRAJHI_CLIENT_SECRET="your-alrajhi-client-secret"

# NPHIES (National Platform for Health Insurance Exchange Services)
# Contact Ministry of Health for NPHIES API access
VITE_NPHIES_API_ENDPOINT="https://api.nphies.sa/v1"
VITE_NPHIES_CLIENT_ID="your-nphies-client-id"
VITE_NPHIES_CLIENT_SECRET="your-nphies-client-secret"

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION (OPTIONAL)
# =============================================================================

# STC Pay Integration
# Contact STC Pay for merchant account and API credentials
VITE_STC_PAY_API_ENDPOINT="https://api.stcpay.com.sa/v1"
VITE_STC_PAY_MERCHANT_ID="your-stc-pay-merchant-id"
VITE_STC_PAY_API_KEY="your-stc-pay-api-key"

# MADA Payment Gateway
# Contact your preferred MADA payment provider
VITE_MADA_API_ENDPOINT="https://api.mada.com.sa/v1"
VITE_MADA_MERCHANT_ID="your-mada-merchant-id"
VITE_MADA_API_KEY="your-mada-api-key"

# =============================================================================
# EMAIL SERVICE CONFIGURATION (OPTIONAL)
# =============================================================================

# Email service for notifications and communications
# You can use SendGrid, AWS SES, or other email services
VITE_EMAIL_SERVICE_PROVIDER="sendgrid"
VITE_SENDGRID_API_KEY="your-sendgrid-api-key"
VITE_FROM_EMAIL="noreply@arkantherapy.com"
VITE_FROM_NAME="Arkan Growth Center"

# =============================================================================
# FILE STORAGE CONFIGURATION (OPTIONAL)
# =============================================================================

# File storage for documents, images, and medical records
# Supabase Storage is used by default, but you can configure external storage
VITE_STORAGE_PROVIDER="supabase"
VITE_AWS_S3_BUCKET="your-s3-bucket-name"
VITE_AWS_S3_REGION="me-south-1"
VITE_AWS_ACCESS_KEY_ID="your-aws-access-key"
VITE_AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# =============================================================================
# ANALYTICS AND MONITORING (OPTIONAL)
# =============================================================================

# Google Analytics for website analytics
VITE_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Sentry for error monitoring and performance tracking
VITE_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
VITE_SENTRY_ENVIRONMENT="development"

# =============================================================================
# AI AND MACHINE LEARNING SERVICES (OPTIONAL)
# =============================================================================

# OpenAI API for AI-powered features
VITE_OPENAI_API_KEY="your-openai-api-key"
VITE_OPENAI_MODEL="gpt-4"

# Azure Cognitive Services for Arabic language processing
VITE_AZURE_COGNITIVE_KEY="your-azure-cognitive-key"
VITE_AZURE_COGNITIVE_ENDPOINT="https://your-region.cognitiveservices.azure.com"

# =============================================================================
# SECURITY AND ENCRYPTION (OPTIONAL)
# =============================================================================

# JWT Secret for token signing (server-side only)
JWT_SECRET="your-very-secure-jwt-secret-key-minimum-32-characters"

# Encryption keys for sensitive medical data
ENCRYPTION_KEY="your-32-character-encryption-key"
ENCRYPTION_IV="your-16-character-init-vector"

# =============================================================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# =============================================================================

# Google Calendar API for appointment scheduling
VITE_GOOGLE_CALENDAR_CLIENT_ID="your-google-calendar-client-id"
VITE_GOOGLE_CALENDAR_API_KEY="your-google-calendar-api-key"

# Microsoft Teams integration
VITE_TEAMS_CLIENT_ID="your-teams-client-id"
VITE_TEAMS_CLIENT_SECRET="your-teams-client-secret"

# Zoom API for telehealth sessions
VITE_ZOOM_CLIENT_ID="your-zoom-client-id"
VITE_ZOOM_CLIENT_SECRET="your-zoom-client-secret"

# =============================================================================
# DEVELOPMENT AND DEBUGGING (DEVELOPMENT ONLY)
# =============================================================================

# Enable debug mode for development
VITE_DEBUG_MODE="true"

# Enable verbose logging
VITE_VERBOSE_LOGGING="false"

# Mock external API calls for development
VITE_MOCK_EXTERNAL_APIS="true"

# =============================================================================
# PRODUCTION DEPLOYMENT (PRODUCTION ONLY)
# =============================================================================

# CDN Configuration for production
VITE_CDN_URL="https://cdn.arkantherapy.com"

# Production domain
VITE_PRODUCTION_DOMAIN="app.arkantherapy.com"

# SSL Certificate configuration
VITE_SSL_ENABLED="true"

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 
# 1. REQUIRED SETUP (Minimum to run the app):
#    - Copy this file to .env
#    - Set up a Supabase project at https://app.supabase.com
#    - Fill in VITE_SUPABASE_URL and VITE_SUPABASE_ANON_KEY
#    - Run the database migration scripts in /database/
#
# 2. OPTIONAL INTEGRATIONS:
#    - WhatsApp: Set up WhatsApp Business API for parent communications
#    - Insurance: Contact Saudi insurance providers for API access
#    - Payments: Set up STC Pay and MADA for payment processing
#    - Email: Configure SendGrid or AWS SES for notifications
#
# 3. PRODUCTION DEPLOYMENT:
#    - Set VITE_ENVIRONMENT="production"
#    - Configure proper domain and SSL settings
#    - Set up monitoring with Sentry
#    - Enable production security features
#
# 4. SECURITY CONSIDERATIONS:
#    - Never commit the .env file to version control
#    - Use strong, unique passwords and API keys
#    - Enable 2FA on all service accounts
#    - Regularly rotate API keys and secrets
#    - Use environment-specific configurations
#
# =============================================================================
# n8n Webhook Configuration
VITE_N8N_BASE_URL=https://n8n.thenotch.site
VITE_N8N_WEBHOOK_STUDENT_ENROLLMENT=/webhook-test/student-enrollment
VITE_ENABLE_WEBHOOK_INTEGRATION=true
VITE_WEBHOOK_TIMEOUT=30000
VITE_WEBHOOK_RETRY_ATTEMPTS=3